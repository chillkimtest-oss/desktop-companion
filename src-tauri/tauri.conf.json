{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Chill Desktop Pet",
  "version": "0.1.0",
  "identifier": "com.chill.desktop-companion",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Chill",
        "transparent": true,
        "decorations": false,
        "alwaysOnTop": true,
        "resizable": false,
        "width": 200,
        "height": 200,
        "x": 600,
        "y": 400,
        "skipTaskbar": true
      }
    ],
    "withGlobalTauri": true,
    "security": {
      "csp": "default-src 'self'; img-src 'self' asset: https://asset.localhost; style-src 'self' 'unsafe-inline'"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
